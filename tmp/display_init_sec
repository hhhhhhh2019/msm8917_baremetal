на моем телефоне hx8394f

lk2nd/display/cont-splash/target_display.c: target_display_init(const char *panel_name)
	mdp_setup_cont_splash()
		static struct fbcon_config fb;
		mdp_read_config(&fb); = mdp_read_pipe_config(fb)
			pipe = mdp_find_pipe(fb);
				const struct mdp_pipe *pipe = mdp_pipes;
				const struct mdp_pipe *pipe_end = pipe + ARRAY_SIZE(mdp_pipes);

				for (; pipe < pipe_end; pipe++) {
					fb->base = (void *)readl(pipe->base + PIPE_SRC0_ADDR);
					if (fb->base)
						return pipe;
				}
			src_size = readl(pipe->base + PIPE_SRC_SIZE);
			img_size = readl(pipe->base + PIPE_SRC_IMG_SIZE);
			src_xy = readl(pipe->base + PIPE_SRC_XY);
			out_size = readl(pipe->base + PIPE_SRC_OUT_SIZE);
			out_xy = readl(pipe->base + PIPE_OUT_XY);
			stride = readl(pipe->base + PIPE_SRC_YSTRIDE);
			format = readl(pipe->base + PIPE_SRC_FORMAT);
			bpp = BITS_SHIFT(format, 10, 9) + 1; /* SRC_BPP */
			fb->width = MDP_X(img_size);
			fb->height = MDP_Y(img_size);
			fb->stride = stride / bpp;
			fb->bpp = bpp * 8;
		mdp_prepare_fb(&fb)
			uint32_t size = fb->stride * fb->bpp/8 * fb->height;
			uintptr_t base = (uintptr_t)fb->base;
			lk2nd_mmu_map_ram_dynamic("continuous splash", base, size);
		mdp_setup_refresh(&fb)
			sel = readl(MDP_CTL_0_BASE + CTL_TOP);
			cmd_mode = !!(sel & BIT(17));
			if (cmd_mode && !auto_refresh) mdp_setup_cmd_refresh(fb);
				fb->update_start = mdp_refresh; = writel(1, MDP_CTL_0_BASE + CTL_START);

		fbcon_setup(&fb); // как будто бы ничего интерестного

	display_image_on_screen();
		fbcon_puts_ln(WHITE, y, incr, true, xstr(BOARD));
		fbcon_flush();
			if (config->update_start)
				config->update_start();
			if (config->update_done)
				while (!config->update_done());

